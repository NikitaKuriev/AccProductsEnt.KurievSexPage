<form method="post">
    <div class="form-group mb-3">
        <label asp-for="InputRaw.RawName" class="col-sm-2 col-form-label"></label>
        <input asp-for="InputRaw.RawName" class="form-control" id="inputTitle" />
        <span asp-validation-for="InputRaw.RawName" style="color:darkred"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="InputRaw.Quantity" class="col-sm-2 col-form-label"></label>
